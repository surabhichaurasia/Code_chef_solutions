#include <iostream>
using namespace std;

int main() {
    long int t,c,d,l;
    cin>>t;
    for(int i=1;i<=t;i++)
    {
        cin>>c>>d>>l;
        if(l%4==0)
        {
            long int x=c-(d*2);
            if(x<0)
            {
                x=0;
            }
            if((l<=(c+d)*4) && (l>=(d+x)*4))
            {
                cout<<"yes"<<"\n";
            }
            else
            {
                cout<<"no"<<"\n";
            }
            
        }
        else
        {
            cout<<"no"<<"\n";
        }
    }
	// your code goes here
	return 0;
}
