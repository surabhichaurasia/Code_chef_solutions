#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    string s;
    for(int i=1;i<=t;i++)
    {
        cin>>s;
        int count=0;
        for(int j=0;j<s.length();j++)
        {
            if(s[j]=='B')
            {
                count=count+2;
            }
            else if(s[j]=='A'|| s[j]=='D'||s[j]=='O'||s[j]=='P'||s[j]=='Q'||s[j]=='R')
            {
                count++;
            }
        }
        cout<<count<<"\n";
    }
	// your code goes here
	return 0;
}
