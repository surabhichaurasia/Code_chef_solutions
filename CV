#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
	// your code goes here
	for(int i=1;i<=t;i++)
	{
	    int count=0,n;
	    cin>>n;
	    string s;
	    cin>>s;
	    
	    for(int j=0;j<n;++j)
	    {
	        if(s[j]!='a' && s[j]!='e' && s[j]!='i' && s[j]!='o' && s[j]!='u')
	        {
	           if(s[j+1]=='a' || s[j+1]=='e' || s[j+1]=='i' || s[j+1]=='o' || s[j+1]=='u')
	            {
	                ++count;
	            }
	        }
	    }
	    cout<< count<<"\n";
	    
	}
	return 0;
}
